generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
  id        String   @id @default(cuid())
  name      String
  color     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trackers  Tracker[]
  rounds    Round[]
}

model TrackerType {
  id         String     @id @default(cuid())
  name       String     @unique
  active     Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  categories Category[]
  trackers   Tracker[]
}

model Tracker {
  id            String      @id @default(cuid())
  personId      String
  trackerTypeId String
  name          String
  active        Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  person        Person      @relation(fields: [personId], references: [id], onDelete: Cascade)
  trackerType   TrackerType @relation(fields: [trackerTypeId], references: [id], onDelete: Restrict)
  rounds        Round[]

  @@index([personId, active])
  @@index([trackerTypeId, active])
}

model Category {
  id                 String      @id @default(cuid())
  trackerTypeId      String
  name               String
  sortOrder          Int         @default(0)
  allowDaysOffPerWeek Int @default(0)
  active             Boolean     @default(true)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  trackerType        TrackerType @relation(fields: [trackerTypeId], references: [id], onDelete: Restrict)
  roundCategories RoundCategory[]
  entries         Entry[]

  @@unique([trackerTypeId, name])
  @@index([trackerTypeId, active, sortOrder])
}

model AppSettings {
  id               String   @id @default("singleton")
  roundLengthWeeks Int      @default(8)
  weekStartsOn     Int      @default(0)
  timezone         String   @default("America/New_York")
  weightUnit       String   @default("LBS")
  updatedAt        DateTime @updatedAt
}

model Round {
  id          String   @id @default(cuid())
  personId    String
  trackerId   String
  startDate   DateTime
  lengthWeeks Int
  goalWeight  Float?
  createdAt   DateTime @default(now())
  person      Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  tracker     Tracker  @relation(fields: [trackerId], references: [id], onDelete: Restrict)
  roundCategories RoundCategory[]
  entries         Entry[]
  weightEntries   WeightEntry[]
  @@index([personId])
  @@index([trackerId])
}

model RoundCategory {
  id          String @id @default(cuid())
  roundId     String
  categoryId  String
  sortOrder   Int
  displayName String
  round       Round     @relation(fields: [roundId], references: [id], onDelete: Cascade)
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  @@unique([roundId, categoryId])
  @@index([roundId])
}

model Entry {
  id         String   @id @default(cuid())
  roundId    String
  categoryId String
  date       DateTime
  status     String   @default("EMPTY")
  updatedAt  DateTime @updatedAt

  round      Round     @relation(fields: [roundId], references: [id], onDelete: Cascade)
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([roundId, categoryId, date])
  @@index([roundId, date])

}

model WeightEntry {
  id        String   @id @default(cuid())
  roundId   String
  weekIndex Int
  date      DateTime
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  round     Round     @relation(fields: [roundId], references: [id], onDelete: Cascade)

  @@unique([roundId, weekIndex])
  @@index([roundId])
}
